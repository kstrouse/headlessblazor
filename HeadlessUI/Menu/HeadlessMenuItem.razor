<HtmlElement TagName="@TagName"
                PreventDefaultOn="@(new() { "onclick", "onfocus" })"
                @onclick="HandleClick"
                @onfocus="HandleFocus"
                @onpointermove="HandlePointerMove"
                @onmouseout="HandleMouseOut"
                @attributes="AdditionalAttributes"
                Id="@Id"
                role="menuitem">
    @ChildContent?.Invoke(this)
</HtmlElement>