@using HeadlessUI.Utilities

<KeyDownEventHandler @ref="keyDownEventHandler" OnKeyDown="HandleKeyDown" PreventDefaultForKeys="new() {
            KeyboardKey.Space,
            KeyboardKey.Enter,
            KeyboardKey.ArrowDown,
            KeyboardKey.ArrowUp
        }" />

<HtmlElement TagName="@TagName"
             @ref="rootElement"
             @attributes="AdditionalAttributes"
             @onclick="HandleClick"
             @onfocus="HandleFocus"
             PreventDefaultOn="@(new() { "onclick", "onfoucus" })"
             Id="@Id"
             aria-controls="@Menu.ItemsElementId"
             aria-haspopup="true"
             aria-expanded="@((Menu.State == MenuState.Open).ToString())">
    @ChildContent
</HtmlElement>