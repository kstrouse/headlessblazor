<CascadingValue TValue="HUIMenuItem" Value="this">
    <HtmlElement TagName="@TagName"
                 PreventDefaultOn="@(new[] { IsEnabled && !OnClickPreventDefault ? "" : "onclick", "onfocus" })"
                 @onclick="HandleClick"
                 @onfocus="HandleFocus"
                 @onpointermove="HandlePointerMove"
                 @onmouseout="HandlePointerLeave"
                 @attributes="AdditionalAttributes"
                 Id="@Id"
                 class="@CssClassBuilder?.Invoke(this)"
                 role="menuitem">
        @ChildContent(this)
    </HtmlElement>
</CascadingValue>