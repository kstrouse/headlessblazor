@if (IsVisible)
{
    <HtmlElement TagName="@TagName" @ref="containerElement"
                 @attributes="AdditionalAttributes"
                 Id="@Id"
                 PreventDefaultOn="@(new string[] { "onkeydown" })"
                 aria-activedescendant="@Menu.ActiveItemId"
                 aria-labelledby="@Menu.MenuButtonControl.Id"
                 tabindex="0"
                 role="menu">
        @ChildContent
    </HtmlElement>
}