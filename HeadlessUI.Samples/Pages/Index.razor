@page "/"

<br />

<style>
    .focus\:shadow-outline-blue:focus {
        box-shadow: 0 0 0 3px rgba(164,202,254,.45);
    }
</style>

<div class="flex items-center justify-center p-12">
    <div class="relative inline-block text-left">
        <HUIMenu>
            <span class="rounded-md shadow-sm">
                <HUIMenuButton class="inline-flex justify-center w-full rounded-md border border-gray-300 px-4 py-2 bg-white text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition ease-in-out duration-150">
                    <span>Options</span>
                    <svg class="w-5 h-5 ml-2 -mr-1"
                         viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                              clip-rule="evenodd"></path>
                    </svg>
                </HUIMenuButton>
            </span>
            <HUIMenuItemContainer class="z-10 absolute right-0 w-56 mt-2 origin-top-right bg-white border border-gray-200 divide-y divide-gray-100 rounded-md shadow-lg outline-none">
                <div class="px-4 py-3">
                    <p class="text-sm leading-5">Signed in as</p>
                    <p class="text-sm font-medium leading-5 text-gray-900 truncate">
                        tom@example.com
                    </p>
                </div>
                <HUIMenuItem TagName="a" href="#account-settings" SearchValue="Account settings" 
                          CssClassBuilder="BuildMenuItemCssClass">
                    Account settings
                </HUIMenuItem>
                <HUIMenuItem TagName="a" href="#" SearchValue="World 2" CssClassBuilder="BuildMenuItemCssClass" OnClick="TestClick" OnClickPreventDefault="true">
                    Hello World 2: isActive = @context.IsActive
                </HUIMenuItem>
                <HUIMenuItem TagName="span" SearchValue="Three" CssClassBuilder="BuildMenuItemCssClass">
                    Hello World 3: isActive = @context.IsActive
                </HUIMenuItem>
            </HUIMenuItemContainer>
        </HUIMenu>
    </div>
</div>

@code {
    private string BuildMenuItemCssClass(HUIMenuItem item)
    {
        var cssClass = "";
        if (item.IsActive)
            cssClass = "bg-gray-100 text-gray-900 ";
        else
            cssClass = "text-gray-700 ";

        return cssClass + "flex justify-between w-full px-4 py-2 text-sm leading-5 text-left";
    }

    private void TestClick(ComponentEventArgs<HUIMenuItem, MouseEventArgs> eventArgs)
    {
        var x = "stopHere";
    }
}